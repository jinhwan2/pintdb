<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%logger{30}:%line - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
  <logger name="ch.qos.logback" level="error"></logger>
  
  <logger name="dilcheck.pintdb.config" level="info"></logger>
  <logger name="dilcheck.pintdb.controller" level="info"></logger>
  <logger name="dilcheck.pintdb.service" level="info"></logger>
  <logger name="dilcheck.pintdb.domain.config" level="info"></logger>
  
  <logger name="org.springframework.boot.web.embedded.tomcat" level="info"></logger>
</configuration>